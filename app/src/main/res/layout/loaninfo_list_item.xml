<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="@color/cardview_light_background"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/user_96"
                        android:id="@+id/imageProfile"
                        android:layout_weight="0.05"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_alignTop="@+id/imageProfile"
                        android:layout_toEndOf="@+id/imageProfile"
                        android:layout_toRightOf="@+id/imageProfile"
                        android:layout_alignBottom="@+id/imageProfile"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:src="@drawable/ic_action_edit"
                            android:layout_width="35dp"
                            android:layout_marginRight="-5dp"
                            android:layout_marginTop="-5dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="30dp"
                            android:id="@+id/imageView2" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:text="Babaji Prabhakar fgfgfPokharkar"
                                android:layout_width="176dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtname"
                                android:textColor="#702222"
                                android:singleLine="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageProfile"
                                android:layout_toEndOf="@+id/imageProfile"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="babaji.p.pokharkar@gmail.com"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtemail"
                                android:layout_below="@+id/txtamount"
                                android:layout_alignLeft="@+id/txtamount"
                                android:layout_alignStart="@+id/txtamount"
                                android:layout_marginTop="5dp"
                                android:layout_weight="0.96" />

                            <TextView
                                android:text="Mo.No: 9730970036"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtmobile"
                                android:layout_below="@+id/txtname"
                                android:layout_toLeftOf="@+id/imageProfile"
                                android:layout_marginTop="3dp"
                                android:layout_alignLeft="@+id/txtname"
                                android:layout_alignStart="@+id/txtname" />

                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#6c6565"
                        android:id="@+id/linebelow"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/imageProfile"
                        android:layout_height="1dp"></RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linebelow"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Address:"
                                android:layout_width="match_parent"
                                android:textColor="#702222"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView4"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="Sathe colony, Karnti Nagar, Pimple Nilakh,Pimpari chinchwad  Pune pin-410027"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignLeft="@+id/txtemail"
                                android:layout_alignStart="@+id/txtemail"
                                android:id="@+id/txtaddress" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#6c6565"
                            android:layout_marginTop="5dp"
                            android:layout_height="1dp"></RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#702222"
                                    android:text="Amount:"
                                    android:layout_height="wrap_content"
                                    android:textStyle="normal|bold"
                                    android:id="@+id/textView6" />
                                <TextView
                                    android:text="100000"
                                    android:layout_width="183dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtamount"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_toRightOf="@+id/textView6"
                                    android:layout_toEndOf="@+id/textView6" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Interest Rate:"
                                    android:textColor="#702222"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView5"
                                    android:textStyle="normal|bold" />
                                <TextView
                                    android:text="12% PA"
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtinterestrate"
                                    android:layout_toRightOf="@+id/textView5"
                                    android:layout_toEndOf="@+id/textView5" />
                            </RelativeLayout>



                        </LinearLayout>
                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_marginTop="5dp"
                          android:layout_height="wrap_content">
                          <TextView
                              android:layout_width="wrap_content"
                              android:text="Total Amount till Today:"
                              android:layout_height="wrap_content"
                              android:textColor="#702222"
                              android:textStyle="normal|bold"
                              android:id="@+id/textView7" />
                          <TextView
                              android:text="100500"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/txttotalamount"
                              android:layout_marginLeft="2dp"
                              android:layout_toRightOf="@+id/textView7"
                              android:layout_toEndOf="@+id/textView7" />
                      </RelativeLayout>


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>